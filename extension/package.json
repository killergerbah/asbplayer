{
    "private": true,
    "name": "@project/extension",
    "version": "0.1.0",
    "scripts": {
        "buildDev": "NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.js --mode development",
        "buildProd": "yarn workspace root run verify && NODE_OPTIONS=--openssl-legacy-provider webpack --config webpack.config.js --mode production",
        "packageDev": "yarn buildDev && ../scripts/package chromium",
        "packageProd": "yarn buildProd && ../scripts/package chromium",
        "packageProdFirefox": "yarn buildProd --env firefox && ../scripts/package firefox",
        "packageProdFirefoxAndroid": "yarn buildProd --env firefoxandroid && ../scripts/package firefoxandroid",
        "test": "jest"
    },
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "@material-ui/lab": "^4.0.0-alpha.57",
        "@project/common": "0.1.0",
        "@types/chrome": "^0.0.261",
        "@types/dom-mediacapture-record": "^1.0.11",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/semver": "^7.3.9",
        "@types/uuid": "^8.3.4",
        "i18next": "^22.4.14",
        "m3u8-parser": "^6.0.0",
        "mpd-parser": "^1.3.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-i18next": "^12.2.0",
        "regenerator-runtime": "^0.13.7",
        "semver": "^7.3.7",
        "typescript": "^4.6.3",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@babel/core": "7.14.5",
        "@babel/preset-env": "^7.14.5",
        "@babel/preset-react": "^7.14.5",
        "@types/jest": "^27.4.1",
        "babel-loader": "^8.1.0",
        "clean-webpack-plugin": "4.0.0-alpha.0",
        "copy-webpack-plugin": "6.4.1",
        "jest": "^26.6.0",
        "source-map-loader": "1.1.3",
        "ts-jest": "^26.5.6",
        "ts-loader": "~8.2.0",
        "url-loader": "^4.1.1",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
