{
    "private": true,
    "name": "@project/extension",
    "version": "0.1.0",
    "scripts": {
        "viteBuild": "vite",
        "buildDev": "yarn tsx build.mts development",
        "buildDevFirefox": "VITE_BUILD_TARGET=firefox yarn buildDev",
        "buildDevFirefoxAndroid": "VITE_BUILD_TARGET=firefoxandroid yarn buildDev",
        "buildProd": "yarn workspace root run verify && tsc && yarn tsx build.mts production",
        "buildProdFirefox": "yarn workspace root run verify && tsc && VITE_BUILD_TARGET=firefox yarn tsx build.mts production",
        "buildProdFirefoxAndroid": "yarn workspace root run verify && tsc && VITE_BUILD_TARGET=firefoxandroid yarn tsx build.mts production",
        "packageDev": "yarn buildDev && ../scripts/package chromium",
        "packageProd": "yarn buildProd && ../scripts/package chromium",
        "packageProdFirefox": "yarn buildProdFirefox && ../scripts/package firefox",
        "packageProdFirefoxAndroid": "yarn buildProdFirefoxAndroid && ../scripts/package firefoxandroid",
        "test": "jest"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.4.3",
        "@mui/material": "^6.4.3",
        "@mui/styles": "^6.4.3",
        "@project/common": "0.1.0",
        "@types/chrome": "^0.0.261",
        "@types/dom-mediacapture-record": "^1.0.11",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/semver": "^7.3.9",
        "@types/uuid": "^8.3.4",
        "i18next": "^22.4.14",
        "m3u8-parser": "^6.0.0",
        "mpd-parser": "^1.3.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-i18next": "^12.2.0",
        "regenerator-runtime": "^0.13.7",
        "semver": "^7.3.7",
        "typescript": "~5.7.2",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "tsx": "^4.19.2",
        "vite": "^6.1.0",
        "vite-plugin-static-copy": "^2.2.0"
    }
}
