{
    "name": "asbplayer",
    "description": "Sync asbplayer with streaming video",
    "version": "0.18.2",
    "manifest_version": 2,
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "permissions": ["tabs", "tabCapture", "activeTab", "storage"],
    "browser_action": {
        "default_title": "asbplayer",
        "default_popup": "popup-ui.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "exclude_globs": ["*://killergerbah.github.io/asbplayer*", "*://localhost:*/*"],
            "js": ["video.js"],
            "css": ["video.css"],
            "all_frames": true
        },
        {
            "matches": ["*://killergerbah.github.io/asbplayer*", "*://localhost:*/*"],
            "js": ["asbplayer.js"],
            "run_at": "document_start"
        }
    ],
    "commands": {
        "copy-subtitle": {
            "suggested_key": {
                "default": "Ctrl+Shift+Z",
                "mac": "MacCtrl+Shift+Z"
            },
            "description": "Copy current subtitle."
        },
        "copy-subtitle-with-dialog": {
            "suggested_key": {
                "default": "Ctrl+Shift+X",
                "mac": "MacCtrl+Shift+X"
            },
            "description": "Copy current subtitle and open Anki dialog."
        },
        "toggle-video-select": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Select video element to mine without a subtitle file, or with detected subtitles on supported sites."
        },
        "take-screenshot": {
            "suggested_key": {
                "default": "Ctrl+Shift+C",
                "mac": "MacCtrl+Shift+C"
            },
            "description": "Manually take screenshot of currently synced video element."
        }
    },
    "web_accessible_resources": [
        "assets/image.png",
        "pages/netflix-page.js",
        "pages/youtube-page.js",
        "anki-ui.js",
        "mp3-encoder.worker.js",
        "video-data-sync-ui.js"
    ]
}
